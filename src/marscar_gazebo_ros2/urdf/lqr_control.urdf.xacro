<?xml version="1.0" ?>
<robot name="cart">
  <link name="world"/>
  <link name="slideBar">
    <visual>
      <geometry>
        <box size="30 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="green">
        <color rgba="0 0.8 .8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="100"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <gazebo reference="slideBar">
    <material>Gazebo/Blue</material>
  </gazebo>

  <link name="cart">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <gazebo reference="cart">
    <material>Gazebo/Green</material>
  </gazebo>

  <link name="arm_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.5"/>
      </geometry>
      <origin xyz="0 0 -0.25"/>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
    <visual>
        <geometry>
            <sphere radius="0.05"/>
        </geometry> 
      <origin xyz="0 0 -0.5"/>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>

    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 -0.5"/>
      <inertia ixx="0.005" ixy="0.0" ixz="0.0" iyy="0.005" iyz="0.0" izz="0.005"/>
    </inertial>
  </link>
  <gazebo reference="arm_link">
    <material>Gazebo/Orange</material>
  </gazebo>
  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 1"/>
    <parent link="world"/>
    <child link="slideBar"/>
  </joint>
  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <origin xyz="0.0 -0.05 0.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="1000.0" lower="-15" upper="15" velocity="30"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>
  <joint name="cart_to_arm" type="continuous">
    <axis xyz="0 1 0"/>
    <origin xyz="0.0 -0.0 0.0" rpy="0.0 3.14159 0.0"/>
    <parent link="cart"/>
    <child link="arm_link"/>
    <limit effort="1000.0" lower="-15" upper="15" velocity="30"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="effort">
        <param name="min">-1000</param>
        <param name="max">1000</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="cart_to_arm">
      <command_interface name="effort">
        <param name="min">-1000</param>
        <param name="max">1000</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">0.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find marscar_gazebo_ros2)/config/lqr_control.yaml</parameters>
    </plugin>
  </gazebo>
</robot>